<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".LayoutFiles.EmployeeSearchActivity">

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/search_bar"
              android:hint="@string/searchbar_hint"
              android:padding="12dp"
              android:id="@+id/activity_employee_search_bar"
              android:drawableEnd="@drawable/material_search_24"
              android:inputType="text"
    />

    <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_employee_search_bar"
            android:id="@+id/activity_employee_search_location_recycler"
    />

</LinearLayout>